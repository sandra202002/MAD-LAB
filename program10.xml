<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="4"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:text="input"
        android:gravity="center"
        android:id="@+id/text"
        android:layout_gravity="fill_horizontal"
        android:textSize="30sp" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:id="@+id/one"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2"
        android:textSize="30sp"
        android:id="@+id/two"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="3"
        android:textSize="30sp"
        android:id="@+id/three"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="+"
        android:textSize="30sp"
        android:id="@+id/add"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="4"
        android:textSize="30sp"
        android:id="@+id/four"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="5"
        android:textSize="30sp"
        android:id="@+id/five"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="6"
        android:textSize="30sp"
        android:id="@+id/six"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="-"
        android:textSize="30sp"
        android:id="@+id/sub"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="7"
        android:textSize="30sp"
        android:id="@+id/seven"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="8"
        android:textSize="30sp"
        android:id="@+id/eight"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="9"
        android:textSize="30sp"
        android:id="@+id/nine"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="*"
        android:textSize="30sp"
        android:id="@+id/mul"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:id="@+id/zero"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="x"
        android:textSize="30sp"
        android:id="@+id/back"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="="
        android:textSize="30sp"
        android:id="@+id/equ"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="/"
        android:textSize="30sp"
        android:id="@+id/div"
        />

  </GridLayout>
